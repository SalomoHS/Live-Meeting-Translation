{
    "manifest_version":3,
    "version":"1.0",
    "name": "Live Meeting Assistant",
    "action": {
      "default_title": "Click to open Amazon Live Meeting Assistant",
      "default_icon": "icon.png"
    },
    "permissions": [
      "storage",
      "sidePanel",
      "identity",
      "tabs",
      "scripting",
      "activeTab",
      "offscreen",
      "nativeMessaging",
      "tabCapture"
    ],
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*",
      "*://*/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "index.html",
          "hello.html"
        ],
        "matches": [
          "http://*/*",
          "https://*/*",
          "*://*/*"
        ]
      }
    ]
}